extends _layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'HOME'}
block content_block
	section.hero 
		.section_in 
			.hero_main 
				.hero_content 
					.hero_title.section_title 
						h1 Помощь на дорогах в Екатеринбурге 24/7
					include interface/form
				.hero_img 
					img(src="i/hero.svg", alt="")
	section.services 
		.section_in 
			.services_title.section_title 
				h2 Наши услуги
			.services_grid_w 
				ul.services_grid 
					-for(i = 0; i < 10; i++)
						- var srcImg = 'i/service/services_' + i + '.jpg'
							li.services_item
								.services_item_img 
									img(src=srcImg, alt="")
								.services_item_content 
									h3 Вскрытие автомобиля
									p Откроем вашу машину, багажник, капот. Условия уточняйте по телефону.
									.services_item_price от 500 руб.
								.services_btn_group
									.services_item_btn.btn 
										a(href="#")
											.service_call_icon 
												+icon('call')
											p Позвонить
									.services_item_btn.btn.mod_wa
										a(href="#")
											.service_call_icon 
												+icon('wa')
											p написать Whatsapp
	section.services 
		.section_in 
			.services_title.section_title 
				h2 Для грузовых авто
			.services_grid_w 
				ul.services_grid 
					-for(i = 0; i < 3; i++)
						- var srcImg = 'i/service/gruz_' + i + '.jpg'
							li.services_item
								.services_item_img 
									img(src=srcImg, alt="")
								.services_item_content 
									h3 Вскрытие автомобиля
									p Откроем вашу машину, багажник, капот. Условия уточняйте по телефону.
									.services_item_price от 500 руб.
								.services_btn_group
									.services_item_btn.btn 
										a(href="#")
											.service_call_icon 
												+icon('call')
											p Позвонить
									.services_item_btn.btn.mod_wa
										a(href="#")
											.service_call_icon 
												+icon('wa')
											p написать Whatsapp
	section.service 
		.section_in 
			.service_main 
				.services_title.section_title 
					h3 Преимущества
				ul.service_grid 
					-
						var service = [
							{
								title: '15 мин.',
								txt: 'Время прибытия к вам',
								icon: 'icon_1'
							},
							{
								title: '100%',
								txt: 'Гарантированный результат',
								icon: 'icon_2'
							},
							{
								title: '24/7',
								txt: 'Наш режим работы',
								icon: 'icon_3'
							},
						]
					each item in service 
						li.service_item 
							.service_item_icon 
								img(src=`i/service/${item.icon}.svg`, alt="")
							.service_item_content 
								h4=item.title 
								p=item.txt
	section.action 
		.section_in 
			.action_main 
				.action_form_w 
					.action_form_head 
						h5 Оставьте заявку
					.action_form 
						include interface/form
				.action_img 
					img(src="i/form_image.jpg", alt="")
	section.contacts 
		.section_in 
			.contacts_main 
				.contacts_title.section_title
					h6 Контакты
				ul.contacts_list 
					-
						var contacts = [
							{
								title: 'Телефон',
								link: '+7 (982) 623-73-59'
							},
							{
								title: 'Почта',
								link: 'sotnikov2611@gmail.com'
							},
							{
								title: 'Адрес',
								txt: 'Екатеринбург, улица Металлургов, 44а'
							},
						]
					each item in contacts 
						li 
							p=item.title
							if item.link 
								a(href="#")=item.link
							else 
								span=item.txt
	section.map 
		#map
	